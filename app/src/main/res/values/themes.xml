<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WasteManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Nav_Button">
        <item name="android:backgroundTint">#B1E1FF</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="_detail_act_list_items">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="_detail_act_headers">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="_post_editing_title_items">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="_card_view">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>