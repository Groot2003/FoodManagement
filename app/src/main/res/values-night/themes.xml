<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WasteManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="background">
        <item name="android:background">#121212</item>
    </style>
    <style name="frag_background">
        <item name="android:background">#232323</item>
    </style>
    <style name="Nav_Button">
        <item name="android:backgroundTint">#232323</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="Nav_Switch">
        <item name="android:thumb">@drawable/dark_sun_24</item>
        <item name="android:background">#232323</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="_detail_act_list_items">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="_detail_act_headers">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="_detail_act_toolbar">
        <item name="android:background">#E4292828</item>
    </style>
    <style name="_detail_ic_background">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="_detail_line_background">
        <item name="android:background">@color/white</item>
    </style>
    <style name="_post_editing_title_items">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="_card_view">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="card">
        <item name="android:layout_margin">10dp</item>
        <item name="cardBackgroundColor">#383838</item>
        <item name="cardCornerRadius">100dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <style name="seekbar">
        <item name="progressColor">@color/purple_200</item>
        <item name="progressBackgroundColor">@color/purple_500</item>
        <item name="progressBackgroundWidth">7dp</item>
        <item name="progressWidth">9dp</item>
        <item name="progress">50</item>
    </style>
</resources>